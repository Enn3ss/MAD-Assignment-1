<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <ImageView
        android:id="@+id/foodIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/foodName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginLeft="8dp"
        tools:layout_marginRight="8dp"
        tools:srcCompat="@drawable/cheese_burger_icon" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheese Burger"
        android:textSize="30dp"
        tools:layout_marginLeft="8dp"
        tools:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/foodPrice"
        app:layout_constraintLeft_toRightOf="@id/foodIcon" />

    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$4.50"
        android:textSize="20dp"
        tools:layout_marginLeft="8dp"
        tools:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/foodName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/foodIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>