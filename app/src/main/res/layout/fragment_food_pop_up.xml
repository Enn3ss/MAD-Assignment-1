<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/popUpIcon"
        android:layout_width="198dp"
        android:layout_height="194dp"
        app:srcCompat="@drawable/big_mac_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/popUpName"/>

    <TextView
        android:id="@+id/popUpName"
        android:layout_width="266dp"
        android:layout_height="62dp"
        android:text="Big Mac"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/popUpPrice"
        app:layout_constraintLeft_toRightOf="@id/popUpIcon"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/popUpPrice"
        android:layout_width="270dp"
        android:layout_height="33dp"
        android:text="$6.50"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/popUpName"
        app:layout_constraintBottom_toTopOf="@id/popUpDescription"
        app:layout_constraintLeft_toRightOf="@id/popUpIcon"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/popUpDescription"
        android:layout_width="261dp"
        android:layout_height="95dp"
        android:text="Tasty Burger"
        app:layout_constraintTop_toBottomOf="@id/popUpPrice"
        app:layout_constraintBottom_toTopOf="@id/addButton"
        app:layout_constraintLeft_toRightOf="@id/popUpIcon"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/popUpIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/amountEditText"/>


    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/popUpDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/subtractButton"
        app:layout_constraintRight_toLeftOf="@id/addButton"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/popUpDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/amountEditText"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>